<!doctype html>
<html>
<head>
<meta charset="UTF-8">
<title>Virgil: Medical Info Form</title>

<meta name="description" content="Virgil: A Simple Mobile UI. Enter your medical information on this page.">
<meta name="keywords" content="Virgil, Mobile, User Interface, UI, simple phone layout, special needs technology, info, profile, medical, medical condition, doctyor , caregiver, medical info">
<meta name="author" content="Dan Tashman">

 <link href='http://fonts.googleapis.com/css?family=Lato|Muli|Oxygen' rel='stylesheet' type='text/css'>


  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  
</head>

<body>

<%= render "partials/header" %>

  <% form_for @user do |f| %>

  <%= f.label :primary, "Primary condition" %>
  <%= f.text_field :primary %>

  <%= f.label :secondary, "Secondary condition (optional)" %>
  <%= f.text_field :secondary %>

  <%= f.label :emergency_contact, "Emergency Contact" %>
  <%= f.text_field :emergency_contact %>

  <%= f.label :ec_number, "Emergency Contact Phone" %>
  <%= f.telephone_field :ec_number %>

  <%= f.label :doctor_name, "Doctor phone (optional)" %>
  <%= f.text_field :doctor_name %>

  <%= f.label :doctor_phone, "Doctor phone number (optional)" %>
  <%= f.telephone_field :doctor_phone %>

  <%= f.label :doctor_name, "Hospital Name (optional)" %>
  <%= f.text_field :doctor_phone %>
 
  <%= f.label :hospital_number, "Hospital Phone # (optional)" %>
  <%= f.telephone_field :hospital_number %>

  <%= f.label :edit, "Edit" %>
  <%= f.submit :edit %>

  <%= f.label "Save" %>
  <%= f.save %>

<%= render "partials/footer" %>
           
</body>
</html>
