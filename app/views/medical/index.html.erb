
  <% form_for @user do |f| %>

  <%= f.label :primary, "Primary condition" %>
  <%= f.text_field :primary, :placeholder => " ex. Down's Syndrome"  %>

  <%= f.label :secondary, "Secondary condition (optional)" %>
  <%= f.text_field :secondary, :placeholder => " ex. Hemophelia" %>

  <%= f.label :emergency_contact, "Emergency Contact" %>
  <%= f.text_field :emergency_contact, :placeholder => " ex. 'Mary', 'Mom', 'Dr. Jones'"  %>

  <%= f.label :ec_number, "Emergency Contact Phone" %>
  <%= f.telephone_field :ec_number, :placeholder => " ex. 212-555-1212"  %>

  <%= f.label :doctor_name, "Doctor name (optional)" %>
  <%= f.text_field :doctor_name, :placeholder => " ex. Dr. Smith"  %>

  <%= f.label :doctor_phone, "Doctor phone number (optional)" %>
  <%= f.telephone_field :doctor_phone, :placeholder => " ex. 212-555-1212"  %>

  <%= f.label :hospital_name, "Hospital Name (optional)" %>
  <%= f.text_field :hospital_name, :placeholder => " ex. Mt. Sinai Hospital"  %>
 
  <%= f.label :hospital_number, "Hospital Phone # (optional)" %>
  <%= f.telephone_field :hospital_number, :placeholder => " ex. (212) 241-6500"  %>

  <%= f.label :edit, "Edit" %>
  <%= f.submit :edit %>

  <%= f.label "Save" %>
  <%= f.save %>

