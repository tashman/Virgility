		        </div> <!--end checkbox holder-->
                             

                          
                 <div class="buttonbox">

                 <input type="submit" class="button" name="medical-edit" value="Edit">
                 <% form_for @user do |f| %>
                  <%= f.label :edit, "Edit" %>
                  <%= f.submit :edit %>
                  <% end %>

                  </div> <!--end buttonbox-->
                       
               <div class="buttonbox">

                     <input type="submit" class="button" name="medical-submit" value="Save">          
                    <% form_for @user do |f| %>
                    <%= f.label "Save" %>
                    <%= f.save %>
                    <% end %>

                </div> <!--end buttonbox-->
                  

