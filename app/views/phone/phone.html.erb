<!doctype html>
<html>
<head>
<meta charset="UTF-8">
<title>Virgil: Phone Number Form</title>

<meta name="description" content="Virgil: A Simple Mobile UI. Phone Numbers.">
<meta name="keywords" content="Virgil, Mobile, User Interface, UI, simple phone layout, special needs technology, info, profile, basic info">
<meta name="author" content="Dan Tashman">

 <link href='http://fonts.googleapis.com/css?family=Lato|Muli|Oxygen' rel='stylesheet' type='text/css'>


  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  
 <style>
 .bumper {background-color: #1f0066; top: 22px; }
 .master-footer {margin-top: 50px; border:1px solid #1f0066;}
 #master-formbox {margin: 100px auto;}
.master-header h2, h3 {top: -1px;}
 </style>
</head>

<body>


      <%= render "partials/header" %>    

    
                    
 <div id="master-formbox">
 
 
           <div class="formbox-wrapper">
                     <h3>Contact Name</h3>
                    <form>
                    <input type="text" name="phone-name" class="formbox" placeholder=" i.e. 'Dentist', 'Work', 'Uncle Ben's">
                    </form>
                    <br />
            </div> <!--end formbox-wrapper-->
            
            
             <div class="clear"></div>
                    
                    
            <div class="formbox-wrapper">
                     <h3>Contact Phone Number</h3>
                    <input type="text" name="phone-number" class="formbox" placeholder=" ex. 212-799-2149">
                    </form>
             </div> <!--end formbox-wrapper-->

                                 
                <div class="formbox-wrapper buttonbox">
                
                            <input type="submit" class="button" name="phone-edit" value="Edit">
            
                            <input type="submit" class="button" name="phone-save" value="Save">
                            
                </div> <!--end formbox-wrapper-->
         
</div> <!--end master-formbox;-->

         <div class="clear"></div>

         
                
       <div class="phone-list-box"> 
       
                 <div class="placelist"><h3>Phone #1</h3></div>
                 <div class="placelist"><h3>Phone #2</h3></div>
                 <div class="placelist"><h3>Phone #3</h3></div>
                 <div class="placelist"><h3>Phone #4</h3></div>
                 <div class="placelist"><h3>Phone #5</h3></div>
                 
         </div> <!--end phone box list-->
         
         

          
          
         </div>
         </div>
         </div>
         </div>
         </div>
         
<%= render "partials/footer" %>


               
</body>
</html>
